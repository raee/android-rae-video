<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.rae.videodemo">


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".DemoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--所有DEMO-->
        <activity android:name=".MainActivity">

        </activity>


        <!--单个播放器DEMO-->
        <activity
            android:name=".activity.SingleVideoDemoActivity"
            android:screenOrientation="portrait">

        </activity>

        <!--简单版播放器DEMO-->
        <activity
            android:name=".activity.SimpleVideoDemoActivity"
            android:screenOrientation="portrait">

        </activity>


        <!--全屏播放DEMO-->
        <activity
            android:name=".activity.FullScreenVideoDemoActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.FullScreen">

        </activity>


        <!--标准版播放器(带封面图)-->
        <activity
            android:name=".activity.RaeVideoLayoutDemoActivity"
            android:screenOrientation="portrait">
        </activity>

        <!--在ListView -->
        <activity
            android:name=".activity.ListViewDemoActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>

</manifest>
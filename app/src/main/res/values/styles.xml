<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">@null</item>
        <item name="actionBarStyle">@style/AppActionBarTheme</item>
        <item name="android:buttonStyle">@style/RaeButton</item>
        <!--<item name="RaeMediaControllerStyle">@style/CustomerMediaControllerStyle</item>-->
        <item name="RaeMediaControllerLoadingStyle">@style/CustomerMediaControllerLoadingStyle
        </item>
    </style>

    <!-- 自定义播放器样式 -->
    <style name="CustomerMediaControllerStyle">
        <item name="playBackground">@mipmap/ic_launcher</item>
    </style>

    <!-- 自定义播放器加载中样式 -->
    <style name="CustomerMediaControllerLoadingStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/rae_media_loading</item>
    </style>

    <style name="AppActionBarTheme" parent="Base.Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RaeButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/default_button_selector</item>
        <item name="android:textColor">@color/text_color_default_button_selector</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
